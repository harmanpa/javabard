<settings>
   <servers>
      <server>
         <id>github</id>
         <username>${env.GITHUB_USERNAME}</username>
         <password>${env.GITHUB_PASSWORD}</password>
      </server>
   </servers>

   <profiles>
      <profile>
         <id>github</id>
         <activation>
            <activeByDefault>true</activeByDefault>
         </activation>
         <repositories>
            <repository>
               <id>central</id>
               <url>https://repo1.maven.org/maven2</url>
               <releases><enabled>true</enabled></releases>
               <snapshots><enabled>true</enabled></snapshots>
            </repository>
            <repository>
               <id>github</id>
               <name>GitHub harmanpa Apache Maven Packages</name>
               <url>https://maven.pkg.github.com/harmanpa</url>
            </repository>
         </repositories>
      </profile>
   </profiles>
</settings>
